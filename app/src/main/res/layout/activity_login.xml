<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_up_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_close"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Logo -->
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_middle_part"
        android:layout_below="@+id/ll_up_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        >

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Name -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_user_account"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_profile"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/et_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/img_user_account"
                    android:background="@null"
                    android:hint="请输入您的手机号"
                    android:textColorHint="#cecece"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/tv_account_underline"
                    android:layout_alignParentBottom="true"
                    android:background="#66bfe8"/>
            </RelativeLayout>

            <!-- Password -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_user_password"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_password"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/img_user_password"
                    android:background="@null"
                    android:hint="请输入您的密码"
                    android:textColorHint="#cecece"
                    android:phoneNumber="true"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/tv_password_underline"
                    android:layout_alignParentBottom="true"
                    android:background="#66bfe8"/>
            </RelativeLayout>

            <!-- Login Button -->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="登录"
                android:textColor="#FFF"
                android:background="@drawable/button_simple"
                android:textSize="16sp"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>